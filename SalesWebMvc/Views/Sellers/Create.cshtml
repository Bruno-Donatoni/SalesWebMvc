@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Tilte"] = "Create";
}

<h2>@ViewData["Tilte"]</h2>

<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="col-form-label-lg">
                <label asp-for="Seller.Name" class="col-form-label"></label>
                <input asp-for="Seller.Name" class="form-control" />
            </div>
            <div class="col-form-label-lg">
                <label asp-for="Seller.Email" class="col-form-label"></label>
                <input asp-for="Seller.Email" class="form-control" />
            </div>
            <div class="col-form-label-lg">
                <label asp-for="Seller.BirthDate" class="col-form-label"></label>
                <input asp-for="Seller.BirthDate" class="form-control" />
            </div>
            <div class="col-form-label-lg">
                <label asp-for="Seller.BaseSalary" class="col-form-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
            </div>
            <div class="col-form-label-lg">
                <label asp-for="Seller.DepartmentId" class="form-label"> </label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id", "Name"))" class="form-select"></select>
            </div>
            <div>
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>